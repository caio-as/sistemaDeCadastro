@{
    ViewData["Title"] = "Criar contato";
}
<div class="text-center">
      
    <h1 class="display-4">Cadastrar contato</h1>
        
</div>


<form>

    <div class="form-group w-75 d-block mx-auto">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="form-group w-75 d-block mx-auto">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail do contato">
    </div>

    <div class="form-group w-75 d-block mx-auto">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular do contato">
    </div>
    <br>

    <button type="submit" class="btn btn-primary w-75 d-block mx-auto mb-1">Adicionar</button>
    <a class="btn btn-secondary w-75 d-block mx-auto" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

